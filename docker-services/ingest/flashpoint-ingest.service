[Unit]
Description=A Watchdog Ingest Docker container that will wait for the robot, the unload the files

[Service]
Type=simple
ExecStart=export FLASHPOINT_DIR="/home/ignite/workspace/flashpoint/" && /usr/bin/docker compose up $FLASHPOINT_DIR
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target